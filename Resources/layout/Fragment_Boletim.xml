<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <EditText
        android:id="@+id/editTextBoletim"
        android:text="Buscar pelo Nome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text" 
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navBoletim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>


    <ScrollView
        android:layout_marginTop="150dp"
        android:layout_width="300dp"
        android:layout_height="385dp"
        android:id="@+id/scrollViewBoletim"
        android:layout_centerHorizontal="true"
        android:background="@color/ecedPrimary"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="MatÃ©ria:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/materiaBoletim" 
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/ecedWhite"/>
            <TextView
                android:text="Nome:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nomeAlunoBoletim" 
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/ecedWhite"/>
            <TextView
                android:text="Nota 1:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nota1Boletim" 
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/ecedWhite"/>
            <TextView
                android:text="Nota 2:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nota2Boletim" 
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/ecedWhite"/>
            <TextView
                android:text="Nota 3:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nota3Boletim" 
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/ecedWhite"/>
            <TextView
                android:text="Turma:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/turmaBoletim" 
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/ecedWhite"/>

        </LinearLayout>

    </ScrollView>
    
</RelativeLayout>